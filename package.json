{
  "name": "eventuate",
  "version": "1.0.0",
  "description": "Extracts information from parkrun results pages for inclusion in reports.",
  "keywords": [
    "parkrun",
    "firefox",
    "web",
    "extension"
  ],
  "homepage": "https://github.com/johnsyweb/eventuate#readme",
  "bugs": {
    "url": "https://github.com/johnsyweb/eventuate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnsyweb/eventuate.git"
  },
  "license": "MIT",
  "author": "Pete Johns",
  "scripts": {
    "build": "webpack && webpack --config webpack.tampermonkey.config.js && webpack --config webpack.bookmarklet.config.js",
    "commit": "cz",
    "lint": "eslint .",
    "package": "pnpm lint && pnpm build && pnpm web-ext:lint && pnpm web-ext:build && pnpm repack-for-chromium",
    "prepare": "husky",
    "repack-for-chromium": "bash './script/repack-for-chromium'",
    "start": "web-ext run -v -u https://www.parkrun.com.au/brimbank/results/latestresults/",
    "test": "jest",
    "web-ext:build": "web-ext build -o",
    "web-ext:lint": "web-ext lint",
    "commitlint": "commitlint --edit",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "version": "pnpm changelog && git add CHANGELOG.md",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.20.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "web-ext": "^8.4.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
  "webExt": {
    "verbose": true,
    "ignoreFiles": [
      ".tool-versions",
      ".web-extension-id",
      "amo.json",
      "assets",
      "chromium*",
      "CODE_OF_CONDUCT.md",
      "dist/eventuate.bookmarklet.js",
      "Dockerfile",
      "eslint.config.mjs",
      "jest.config.ts",
      "LICENSE.txt",
      "package.json",
      "pnpm-lock.yaml",
      "README.md",
      "script",
      "src",
      "target",
      "test",
      "tsconfig.json",
      "webpack.config.js"
    ],
    "sign": {
      "channel": "listed"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "manifest.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes.split('\\n').slice(0, 3).join('\\n')}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "web-ext-artifacts/*.zip",
              "label": "Firefox Extension"
            },
            {
              "path": "chromium-*.zip",
              "label": "Chrome Extension"
            },
            {
              "path": "dist/eventuate.user.js",
              "label": "Tampermonkey Script"
            },
            {
              "path": "dist/bookmarklet.html",
              "label": "Bookmarklet Installation Page"
            }
          ]
        }
      ]
    ]
  }
}