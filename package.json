{
  "name": "eventuate",
  "version": "1.5.0",
  "description": "Extracts information from parkrun results pages for inclusion in reports.",
  "keywords": [
    "parkrun",
    "firefox",
    "web",
    "extension"
  ],
  "homepage": "https://github.com/johnsyweb/eventuate#readme",
  "bugs": {
    "url": "https://github.com/johnsyweb/eventuate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnsyweb/eventuate.git"
  },
  "license": "MIT",
  "author": "Pete Johns",
  "scripts": {
    "build": "webpack && webpack --config webpack.bookmarklet.config.js && webpack --config webpack.userscript.config.js",
    "build:watch": "webpack --watch",
    "build:userscript:watch": "webpack --config webpack.userscript.config.js --watch",
    "build:bookmarklet:watch": "webpack --config webpack.bookmarklet.config.js --watch",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "commit": "cz",
    "commitlint": "commitlint --edit",
    "docs:build": "pnpm build && cd docs && bundle exec jekyll build",
    "docs:install": "pnpm build && cd docs && bundle install",
    "docs:serve": "pnpm build && cd docs && bundle exec jekyll serve",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint . && pnpm format:check",
    "package": "pnpm lint && pnpm build && pnpm web-ext:lint && pnpm web-ext:build && pnpm repack-for-chromium",
    "prepare": "husky",
    "release": "semantic-release",
    "repack-for-chromium": "bash './script/repack-for-chromium'",
    "screenshots": "ts-node script/generate-screenshots.ts",
    "start": "web-ext run -v -u https://www.parkrun.com.au/brimbank/results/latestresults/",
    "test": "jest",
    "version": "pnpm changelog && git add CHANGELOG.md",
    "web-ext:build": "web-ext build -o",
    "web-ext:lint": "web-ext lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.0",
    "@types/puppeteer": "^7.0.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.26.0",
    "semantic-release": "^25.0.1",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "web-ext": "^9.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
  "webExt": {
    "verbose": true,
    "ignoreFiles": [
      "*.config.js",
      ".tool-versions",
      ".web-extension-id",
      "CODE_OF_CONDUCT.md",
      "Dockerfile",
      "LICENSE.txt",
      "README.md",
      "amo.json",
      "assets",
      "chromium*",
      "docs/**/*",
      "eslint.config.mjs",
      "jest.config.ts",
      "package.json",
      "pnpm-lock.yaml",
      "script",
      "src",
      "target",
      "test",
      "tsconfig.json"
    ],
    "sign": {
      "channel": "listed"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./script/release \"${nextRelease.version}\""
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "manifest.json",
            "amo.json",
            "docs/**/*"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes.split('\\n').slice(0, 3).join('\\n')}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "web-ext-artifacts/*.zip",
              "label": "Firefox Extension"
            },
            {
              "path": "eventuate-chromium.zip",
              "label": "Chromium Extension"
            },
            {
              "path": "docs/eventuate.user.js",
              "label": "Userscript"
            },
            {
              "path": "docs/bookmarklet.md",
              "label": "Bookmarklet Installation Page"
            }
          ]
        }
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "always"
  }
}
